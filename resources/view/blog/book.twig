{% extends '_partials/index.twig' %}

{% block head %}
    {{ parent() }}

    {{ css.inline('resources/css/code.scss')|raw }}
    {{ css.inline('resources/css/blog.scss')|raw }}
    {{ css.inline('resources/css/blog_detail.scss')|raw }}
    {{ css.inline('resources/css/overview.scss')|raw }}
{% endblock %}

{% block content %}
    <header class="wrapper">
        <h1>
            {{ title }} â€” stitcher.io
        </h1>

        {% include '_partials/header_links.twig' %}
    </header>

    <div class="wrapper">
        {% for post in posts %}
            <article class="blog">
                {{ post.content|raw }}

                {% if post.footnotes is defined %}
                    <nav class="footnotes">
                        <h2>Footnotes</h2>

                        {% for footnote in post.footnotes %}
                            <p>
                                <a href="{{ footnote.link }}" title="{{ footnote.title }}">{{ footnote.title }}</a>
                                {% if footnote.description is defined %}{{ footnote.description }}{% endif %}
                            </p>
                        {% endfor %}
                    </nav>
                {% endif %}
            </article>
        {% endfor %}
    </div>
{% endblock %}
