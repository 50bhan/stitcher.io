{% extends '_partials/index.twig' %}

{% block head %}
    {{ parent() }}

    {{ css.inline('resources/css/blog.scss')|raw }}
    {{ css.inline('resources/css/hljs-github.scss')|raw }}
{% endblock %}

{% block content %}
    <header class="banner banner__blog">
        {% include '_partials/curve.twig' %}
    </header>

    <div class="content__blog">
        <div class="container">
            <article class="blog">
                <h1>{{ post.title }}</h1>

                {{ post.content|raw }}
            </article>

            <footer>
                {% if _browse is defined %}
                    <nav class="spacer">
                        {% if _browse.next is defined %}
                            <a class="next cta cta--ghost" href="/blog/{{ _browse.next.id }}">
                                Continue reading:
                                {% if _browse.next.teaserTitle is defined %}
                                    {{ _browse.next.teaserTitle }}
                                {% else %}
                                    {{ _browse.next.title }}
                                {% endif %}
                            </a>
                        {% endif %}

                        {% if _browse.prev is defined %}
                            <a class="prev cta cta--ghost" href="/blog/{{ _browse.prev.id }}">
                                Previous post:
                                {% if _browse.prev.teaserTitle is defined %}
                                    {{ _browse.prev.teaserTitle }}
                                {% else %}
                                    {{ _browse.prev.title }}
                                {% endif %}
                            </a>
                        {% endif %}
                    </nav>
                {% endif %}

                <nav class="center spacer">
                    <a class="cta cta--link" href="/blog/page-1">Back to overview</a>
                </nav>
            </footer>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block scripts %}
    {{ parent() }}

    {{ js.inline('resources/js/codeClick.js')|raw }}
    {{ js.async.link('resources/js/hljs.min.js')|raw }}
{% endblock %}

